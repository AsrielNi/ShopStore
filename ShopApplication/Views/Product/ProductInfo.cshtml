@{
    ViewData["Title"] = "Product Page";
    string productID = ViewData["productID"] as string;
}

<div id="info">

</div>

<script>
    function getInfo() {
        $.ajax({
            type: "get",
            url: "/api/Product/GetProductInfo/@productID",
            success: function (response) {
                var text = 
                    `
                    <p>Name: ${response.productName}</p>
                    <p>Price: ${response.price}</p>
                    <p>Remaining: ${response.remainingQuantity}</p>
                    <img src="/ProductSystemAPI/${response.picturePath}" />
                    `;
                document.getElementById("info").innerHTML = text;
            }
        })
    }
    getInfo();
</script>
