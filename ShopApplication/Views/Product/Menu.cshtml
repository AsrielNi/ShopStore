@model IEnumerable<ShopApplication.Models.Product>

@{
    ViewData["Title"] = "Product Menu Page";
}

@foreach (var item in Model)
{
    <p>
        Name: @item.ProductName
        <img src="~/ProductSystemAPI/@item.PicturePath" />
        <a asp-controller="Product" asp-action="ProductInfo" asp-route-productID="@item.ProductID">Link to @item.ProductName</a>
    </p><br />
}
